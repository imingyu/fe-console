.vl-scroller {
  height: 100%;
}

.vl-index,
.vl-total {
  width: 40rpx;
  height: 40rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  background-color: #000;
  position: absolute;
}

.vl-total {
  background-color: red !important;
  left: 100rpx;
}

.fc-reader {
  height: 100%;
  position: relative;
  background-color: #fff;
}

.fc-reader-detail-container {
  position: absolute;
  top: 0;
  left: 30%;
  bottom: 0;
  right: 0;
  z-index: 10;
  display: block;
  background-color: #fff;
  margin-top: 1px;
}

.fc-reader-detail-container.has-bar {
  top: 60rpx;
  margin-top: 2px;
}

.fc-api-col {
  width: 17.5%;
  height: 80rpx;
}

.fc-api-col.fc-col-1 {
  width: 30%;
}

.fc-api-col.fc-col-2 {
  width: 20%;
}

.fc-api-col.fc-col-3 {
  width: 15%;
}

.fc-api-reader-th.fc-show-detail .fc-col-1 {
  width: 100%;
}

.fc-api-reader-th.fc-show-detail .fc-col-1:after {
  right: auto;
  left: 30%;
}

.fc-api-reader-th.fc-show-detail .fc-col-2,
.fc-api-reader-th.fc-show-detail .fc-col-3,
.fc-api-reader-th.fc-show-detail .fc-col-4,
.fc-api-reader-th.fc-show-detail .fc-col-5 {
  display: none;
}

.fc-api-reader-th.fc-show-detail .fc-col-2:after,
.fc-api-reader-th.fc-show-detail .fc-col-3:after,
.fc-api-reader-th.fc-show-detail .fc-col-4:after,
.fc-api-reader-th.fc-show-detail .fc-col-5:after {
  display: none;
}
