.vl-scroller {
  height: 100%;
}

.vl-index,
.vl-total {
  width: 40rpx;
  height: 40rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  background-color: #000;
  position: absolute;
}

.vl-total {
  background-color: red !important;
  left: 100rpx;
}

.fc-datagrid {
  height: 100%;
  position: relative;
  background-color: #fff;
  color: #5e5e5e;
}

.fc-datagrid.has-data .fc-datagrid-head .fc-datagrid-col {
  padding-right: 0;
  border-right-color: transparent;
}

.fc-datagrid.has-data .fc-datagrid-head .fc-datagrid-col.is-last-col:after {
  display: none;
}

.fc-datagrid.has-data .fc-datagrid-head .fc-datagrid-col:after {
  content: '';
  position: absolute;
  z-index: 10;
  width: 1px;
  margin-right: -1px;
  background-color: #ccc;
  top: 0;
  bottom: 0;
  justify-self: flex-end;
  align-self: flex-end;
}

.fc-api-datagrid .fc-datagrid-affix .fc-i3,
.fc-api-datagrid .fc-datagrid-scroll .fc-i3 {
  text-decoration: underline;
}

.fc-api-datagrid.show-detail {
  width: 30%;
}

.fc-api-datagrid.show-detail .fc-datagrid-col {
  display: none;
}

.fc-api-datagrid.show-detail .fc-i0 {
  display: flex;
  width: 100% !important;
}

.fc-datagrid-head {
  background-color: #f3f3f3;
  box-sizing: border-box;
  height: 70rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #ccc;
}

.fc-datagrid-head .fc-datagrid-col {
  height: 100%;
  font-size: inherit;
}

.fc-datagrid-row {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  color: #5e5e5e;
}

.fc-datagrid-row.fc-500, .fc-datagrid-row.fc-404 {
  color: red;
}

.fc-datagrid-row.fc-even {
  background-color: #f5f5f5;
}

.fc-datagrid-row.fc-odd {
  background-color: #fff;
}

.fc-datagrid-row-xhr,
.fc-datagrid-row-ws {
  font-weight: bold;
}

.fc-datagrid-col {
  box-sizing: border-box;
  flex-grow: 0;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 6rpx 10rpx;
  border-right: 1px solid #ccc;
  line-height: 1.2;
  font-size: 24rpx;
}

.fc-datagrid-col.fc-last {
  border-right: none;
}

.fc-datagrid-col.fc-hide {
  display: none;
}

.fc-datagrid-col.fc-nowrap {
  overflow: hidden;
  white-space: nowrap;
  flex-wrap: nowrap;
  text-overflow: ellipsis;
}

.fc-datagrid-col.fc-nowrap .fc-datagrid-col-content,
.fc-datagrid-col.fc-nowrap .fc-datagrid-col-desc {
  overflow: hidden;
  vertical-align: middle;
  white-space: nowrap;
  flex-wrap: nowrap;
  text-overflow: ellipsis;
}

.fc-datagrid-col.fc-nowrap .fc-datagrid-col-content {
  height: 28.8rpx;
}

.fc-datagrid-col.fc-nowrap .fc-datagrid-col-desc {
  height: 26.4rpx;
}

.fc-datagrid-col-desc {
  font-size: 22rpx;
  opacity: .7;
  margin-top: 4rpx;
}

.fc-datagrid-affix {
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.075);
}

.fc-datagrid-scroll {
  position: absolute;
  top: 70rpx;
  left: 0;
  bottom: 0;
  z-index: 5;
  width: 100%;
}
