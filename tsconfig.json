{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@fe-console/*": ["packages/*"]
        },
        "declaration": true,
        "lib": ["ES2015"]
    },
    "include": [
        "packages/core/*.ts",
        "packages/renderer/*.ts",
        "packages/provider/*.ts",
        "packages/types/*.ts",
        "packages/util/*.ts",
        "packages/core/**/*.ts",
        "packages/renderer/**/*.ts",
        "packages/provider/**/*.ts",
        "packages/types/**/*.ts",
        "packages/util/**/*.ts",
        "global.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
