.fc-detail {
  display: block;
  height: 100%;
  background-color: #fff;
  border-left: 1px solid #ccc;
  box-sizing: border-box;
}

.fc-detail.fc-status-container {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  flex-direction: column;
  font-size: 12rpx;
}

.fc-detail.fc-status-container .fc-status-action {
  color: #1a73ea;
  text-decoration: underline;
  margin-top: 15rpx;
}
