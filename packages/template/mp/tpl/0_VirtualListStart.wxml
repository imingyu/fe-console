<view class="vl-list-placeholder is-start"
        style="height:{{ $vlStartPlaceholderHeight }}px;"></view>
    <view class="vl-list">
        <view wx:for="{{ $vlShowList }}"
            wx:for-item="$vlItem"
            wx:for-index="$vlItemIndex"
            wx:key="id"
            wx:if="{{ $vlStatus['s'+$vlItem.id] !== 'recovery'}}"
            class="vl-item-container status-{{ $vlStatus['s'+$vlItem.id] || 'none' }} vl-item-{{$vlItem.id}}"
            style="height:{{$vlItemHeight['s'+item.id]&&$vlItemStatus['s'+item.id]==='weak'?($vlItemHeight['s'+item.id]+'px'):'auto'}};">