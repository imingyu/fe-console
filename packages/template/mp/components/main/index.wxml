<view class="fc-hand cid-{{$cid}} tid-{{$tid}} {{visable?'is-hide':''}}" <%= bindEvent('tap') %>="toggleVisable">Mpc</view>
<!-- TODO:iPhoneX等全面屏适配 -->
<view wx:if="{{visable || mounted}}" class="cid-{{$cid}} tid-{{$tid}} fc-modal {{visable?'is-show':''}} {{fullScreen?'is-full':''}}">
    <fc-tabs tabs="{{tabs}}" active="{{activeTabIndex}}" outerClass="fc-product-tabs" parentCid="{{ $cid }}" parentTid="{{ $tid }}" tidAlias="FcProductTypeTabs">
        <view slot="headBefore" class="fc-tabs-action" <%= bindEvent('tap') %>="toggleZoom">
            <view class="fc-tabs-zoom fc-ic-{{fullScreen?'compress':'expand'}}">
                <view class="fc-ic-arrow-1"></view>
                <view class="fc-ic-arrow-2"></view>
            </view>
        </view>
        <view slot="headAfter" class="fc-tabs-action fc-tabs-action-right" <%= bindEvent('tap') %>="close">
            <view class="fc-tabs-close fc-ic-close"></view>
        </view>
        <fc-api-reader slot="panel-api" class="fc-tab-panel-reader" active="{{activeTabIndex===2}}" parentCid="{{ $cid }}" parentTid="{{ $tid }}"></fc-api-reader>
    </fc-tabs>
</view>